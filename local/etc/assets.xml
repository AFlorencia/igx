<?xml version="1.0" encoding="utf-8"?>
<assets>
	<config>
		<fields name="params" addfieldpath="/plugins/system/t3/includes/depend">
			<fieldset name="extra_params" label="Extra Params" addfieldpath="/plugins/system/t3/includes/depend">			
				<field name="showcomponent"
				       type="list"
				       label="Mostrar componente"
				       description="Ocultar componente"
				       value="1"
				       class="t3-admin-textarea"
				       global="1" >
					   <option value="1">Siempre</option>
					   <option value="2">Solo home</option>
					   <option value="3">Todos menos home</option>					  
					   </field>				
								
				<field name="showslogan"
				       type="radio"
				       label="Mostrar Slogan"
				       description="Mostrar Slogan"
				       value="1"
				       global="1" default="0"><option value="1" >JYES</option>
					   <option value="0">JNO</option>
					   </field>
					   
				<field name="headertype"
				       label="Tipo de cabecera"
				       description="Tipo de cabecera (Sticky, stycky with logo, normal)"
				       size="7"
				       type="list"
				       global="1">				
					<option value="default">t3-normal</option>
					   <option value="sticky">Sticky</option>
					
				</field>
				
				<field name="menualign"
				       type="list"
				       label="Alineación items de menú"
				       description="Alineación items de menú (derecha, izquierda, centrada"
				       size="7"
				       class="t3-admin-textarea"
				       global="1">
					<option value="navbar-left">Izquierda</option>
					<option value="navbar-right">Derecha</option>
					<option value="navbar-center">Centrada</option>
				</field>
				
			<field name="logocolsize" type="number" default="4" label="Tamaño de la columna del logotipo" description="Tamaño de la columna del logotipo" min="1" max="12" step="1" />
				
			<field name="back-to-top"
				       type="radio"
				       label="Mostrar botón ir arriba"
				       description="Mostrar botón ir arriba"
				       value="1"
				       global="1" default="0"><option value="1" >JYES</option>
					   <option value="0">JNO</option>
					   </field>
				
			</fieldset>
				
<fieldset name="preload" label="Preloader">
<field name="preload"  type="radio"
				       label="Mostrar preloader"
				       value="1"
				       global="1" default="0">
                       <option value="1" >JYES</option>
					   <option value="0">JNO</option>
					   </field>
<field name="preloadtext" type="text" label="Texto del preloader" default="Cargando" showon="preload:1" />                     
<field name="preloadtime" type="text" label="Tiempo de precarga (ms)" showon="preload:1" default="500" />
<field name="preloadcolor" type="color" label="Color del texto" default="#333" />
<field name="preloadbgcolor" type="color" label="Color del fondo" default="#fff" />
<field name="svgpreload" type="textarea" label="SVG de la precarga" showon="preload:1" filter="raw"/>
<field name="preloadcss" type="textarea" label="CSS personalizado para el preloader" showon="preload:1" filter="raw"/>
</fieldset>  
<fieldset name="jsCss" label="JS - CSS Adicionales - Icon">
	<field name="easing" type="radio" label="easing.js" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>
	<field name="aos" type="radio" label="aos.js" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>
	<field name="eh" type="radio" label="matchHeight.js" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>
<field name="customgalleryjs" type="radio" label="CGallery.js" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>

<field name="fancyboxjs" type="radio" label="FancyBoxJS" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>
<field name="fancyboxcss" type="radio" label="FancyBoxCSS" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>



	<field name="commonscripts" type="radio" label="scripts.js" default="0">
	<option value="0">JNO</option>
	<option value="1">JYES</option>
</field>
<field name="safari" label="Safari Color" type="color"/>
<field name="android" label="Android" type="color"/>
<field name="metro" label="Metro" type="color"/>
</fieldset>
<fieldset name="social" label="Social">
		<field name="social" type="list" default="0" label="Hablitar Social Share" >
	<option value="0">JNO</option>
	<option value="1">JYES</option>
		</field>
		<field name="social_position" type="radio"  default="1" label="Posición del sharer"  showon="social:1">
			<option value="1">Abajo del info</option>
			<option value="2">Abajo del artículo</option>
			<option value="3">Ambas</option>
		</field>
		<field name="fbid" type="text" label="Facebook App Id" showon="social:1" />
		<field name="og_twitter_site" type="text" helixgroup="blog_details" label="twitter site" showon="social_share:1" />
</fieldset>  	
		</fields>
	</config>
	
	
	<stylesheets>
		<file>fonts/font-awesome/css/font-awesome.min.css</file>
	</stylesheets>
</assets>
